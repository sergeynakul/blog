<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>File</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.file %></td>
        <td><%= post.category.name %></td>
        <td><%= link_to 'Show', category_post_path(@category) %></td>
        <td><%= link_to 'Edit', edit_category_post_path(@category) %></td>
        <td><%= link_to 'Destroy', category_post_path(@category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_category_post_path(@category) %>
