<h2>Posts</h2>
<% @category.posts.each do |post| 
  next if post.id.nil? # TODO remove after db cleanup %>
  <p><%= post.name %>
  | <%= link_to 'Show', category_post_path(category_id: @category.id, id: post.id) %> 
  | <%= link_to 'Edit', edit_category_post_path(category_id: @category.id, id: post.id) %> 
  | <%= link_to 'Destroy', [post.category, post], method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

