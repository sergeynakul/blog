<p id="notice"><%= notice %></p>

<div class="posts" id="post-#{@post.id}">
	<p>
	  <strong>Name:</strong>
	  <%= @post.name %>
	</p>

	<p>
	  <strong>Content:</strong>
	  <%= @post.content %>
	</p>

	<p>
	  <strong>File:</strong>
	  <%= link_to @post.file.file.identifier, @post.file.url if @post.file? %>
	</p>

	<p>
	  <strong>Category:</strong>
	  <%= @post.category.name %>
	</p>

	<div class="comments">
		<%= render 'comments/list', parent: @post.category %>
	</div>
</div>

<%= link_to 'Back', @category %>
